{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "‚ñ∂Ô∏è RUN SERVER",
            "type": "shell",
            "command": "bash run-server.sh",
            "isBackground": true,
            "problemMatcher": {
                "owner": "hugo",
                "pattern": { "regexp": "^.*$" },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Iniciando Hugo Server",
                    "endsPattern": "Built in"
                }
            },
            "presentation": { "group": "servers", "reveal": "silent" }
        },
        {
            "label": "üåê OPEN BROWSER",
            "command": "${input:openSimpleBrowser}",
            "problemMatcher": [],
            "group": "none"
        },
    ],
    "inputs": [
        {
            "id": "openSimpleBrowser",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": ["FULL_LINK"]
        }
    ]
}
